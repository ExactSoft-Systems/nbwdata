{% block paragraph %}
  <section class="paragraph--card-group">
    {% block content %}
      <div class="grid-container-widescreen">
        <h2>{{ paragraph.field_title.value | raw }}</h2>

        <div class="grid-row grid-gap-lg">
          {% for card in paragraph.field_card %}
            <div class="desktop:grid-col-4 grid-col-12 card-col">
              <div class="usa-card__container usa-card__flip">
                <div class="usa-card__default">
                  <div class="usa-card__media">
                    <div class="usa-card__img">
                      <img src="{{ file_url(card.entity.field_image.entity.fileuri) }}" alt="">
                    </div>
                  </div>
                  <div class="usa-card__footer">
                    <div class="grid-row">
                      <div class="grid-col-9 text-col">
                        <h3>{{ card.entity.field_title_formatted.value }}</h3>
                      </div>
                      <div class="grid-col-3 cta-col">
                        <a href="{{ card.entity.field_link.0.url }}" class="card-cta">
                          <img src="{{ active_theme_icons_path }}/chevron_right_blue.svg" />
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="usa-card__rollover">
                  <div class="usa-card__media">
                    <div class="usa-card__img">
                      <img src="{{ file_url(card.entity.field_thumbnail.entity.fileuri) }}" alt="">
                    </div>
                  </div>
                  <div class="usa-card__body">
                    {{ card.entity.field_caption.value | raw }}
                  </div>
                  <div class="usa-card__footer">
                    <div class="grid-row">
                      <div class="grid-col-9 text-col"></div>
                      <div class="grid-col-3 cta-col">
                        <a href="{{ card.entity.field_link.0.url }}" class="card-cta">
                          <img src="{{ active_theme_icons_path }}/chevron_right_blue.svg" />
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

        {% if paragraph.field_link.0.url is not empty %}
          <div class="cta">
            <a href="{{ paragraph.field_link.0.url }}" class="cta-pill cta-white">{{ paragraph.field_link.0.value.title }}</a>
          </div>
        {% endif %}
      </div>
    {% endblock %}
  </section>
{% endblock paragraph %}
